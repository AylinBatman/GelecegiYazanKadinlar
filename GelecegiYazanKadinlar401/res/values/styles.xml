<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#fff</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:backgroundTint">#fff</item>
        <item name="android:colorFocusedHighlight">#fff</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyleDark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FF3A5873</item>
        <item name="android:textColorHint">#FF3A5873</item>
        <item name="android:backgroundTint">#FF3A5873</item>
        <item name="android:colorFocusedHighlight">#fff</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
